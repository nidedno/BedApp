<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BedroomStories.StoryPage"
             Title="Story">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label x:Name="StoryTitle" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" Margin="10" TextColor="#F4A12C"/>
            <ScrollView VerticalOptions="FillAndExpand">
                <Label x:Name="StoryContent" FontSize="Medium" TextColor="WhiteSmoke"/>
            </ScrollView>
            <Button Text="Good Night" TextTransform="None" Clicked="OnGoodNightClicked" FontSize="Large" HorizontalOptions="FillAndExpand" Margin="50,10,50,5" BackgroundColor="#512B6F" TextColor="WhiteSmoke" CornerRadius="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>